{
  "name": "node-pushserver",
  "version": "0.6.1",
  "description": "Cross-platform Push Notifications. A project providing a generic API to push messages using Apple's APN and Google's GCM services.",
  "keywords": [
    "push",
    "gcm",
    "apn",
    "mongodb"
  ],
  "scripts": {
    "start": "node dist/bin/www",
    "clean": "rm -rf dist",
    "directories": "find server -type d | sed \"s|^server/|dist/|\" | xargs mkdir -p",
    "prebuild": "npm run clean && npm run directories",
    "build": "npm run static && tsc",
    "prewatch": "npm run clean && npm run directories",
    "watch": "concurrently \"npm run watch:static\" \"npm run watch:ts\" -n \"static,ts\" -c \"gray,blue\"",
    "watch:ts": "tsc -w",
    "watch:static": "watch \"npm run static\" server",
    "static": "find server -type f ! -name \"*.ts\" | sed \"s|^server/||\" | xargs \"-I{}\" cp \"server/{}\" \"dist/{}\"",
    "test": "mocha -t 64000 dist/**/*.spec.js",
    "watch:test": "watch \"npm run test\" server/**/*.spec.ts",
    "release": "standard-version",
    "mongodb": "docker run --name mongodb-srv -d -p 8081:8081 -p 27017:27017 -p 27018:27018 -p 27019:27019 mongo",
    "mongodb:persistent": "docker run --name mongodb-srv -d -e MONGO_INITDB_DATABASE=realtime -v /DOCKER-VOLUMES/mongo:/data/db -v /DOCKER-VOLUMES/mongo/configdb:/data/configdb  -p 27017:27017 mongo",
    "shell:mongodb": "docker exec -i -t mongodb-srv /bin/bash"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/prodest/node-pushserver.git"
  },
  "bugs": "https://github.com/prodest/node-pushserver/issues",
  "dependencies": {
    "@types/request-promise": "^4.1.44",
    "apn": "^2.2.0",
    "basic-auth": "^1.1.0",
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.7",
    "express": "^4.15.3",
    "express-jwt": "^5.3.1",
    "firebase-admin": "^5.3.0",
    "jwks-rsa": "^1.3.0",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.4",
    "mongoose": "^5.2.9",
    "morgan": "^1.8.1",
    "pg": "^7.3.0",
    "pg-hstore": "^2.3.2",
    "request-promise": "^4.2.4",
    "sequelize": "^4.8.4",
    "thinky": "^2.3.8",
    "typescript": "^2.3.2"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.2",
    "@types/body-parser": "^1.16.3",
    "@types/compression": "^0.0.33",
    "@types/cors": "^2.8.1",
    "@types/dotenv": "^4.0.0",
    "@types/ejs": "^2.3.33",
    "@types/express": "^4.0.35",
    "@types/jwt-simple": "^0.5.33",
    "@types/lodash": "^4.14.74",
    "@types/mongoose": "^5.2.6",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.18",
    "@types/node-gcm": "^0.14.29",
    "@types/rethinkdb": "^2.3.5",
    "@types/sequelize": "^4.0.73",
    "@types/typescript": "^2.0.0",
    "concurrently": "^3.5.0",
    "standard-version": "^4.4.0",
    "tslint": "^5.2.0",
    "watch": "^1.0.2"
  }
}
